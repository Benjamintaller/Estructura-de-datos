// ejemploMenu.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
using namespace std;
int main()
{
	int opcion,a,b;
	
	do {
		cout << "--------Menu---------" << endl;
		cout << " 1. Suma de numeros " << endl;
		cout << " 2. Ver si un numero es positvio o negativo" << endl;
		cout << " 3. Factorial de un numero" << endl;
		cout << "0.- salir " << endl;
		cout << " ELIJA UNA OPCION " << endl;
		cin >> opcion;
		switch (opcion) {
		case 1:
			cout << "ingrese el primer numero que quiera sumar"<<endl;
				cin >> a;
				cout << " ingrese el segundo numero que quiera sumar"<<endl;
					cin >> b;
					cout << " la suma es: " << a + b << endl;
			break;
		case 2:
			cout << " Ingrese un numero: ";
			cin >> a;
			if (a > 0)
				cout << " Su numero es Positivo: " << a;
			else
				cout << " Su numero es negativo: " << a;
			break;
		case 3:
			cout << " ingrese hasta que numero se va a realizar el factorial ";
			cin >> a;
			b = 1;
			for (int i = 2; i <= a; i++)
				b = b * i; //b es un acumulador 
			cout << " El factorial del numero es: " << b << endl;
			break;
		case 0:
			cout << " salir ";
			break;
		default:
			cout << " ERROR " << endl;

		}
	} while (opcion != 0);
}

// Ejecutar programa: Ctrl + F5 o menú Depurar > Iniciar sin depurar
// Depurar programa: F5 o menú Depurar > Iniciar depuración

